<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android_weilgu="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.myview.acti.MainActivity">

    <com.myview.view.LinearLayoutView
        android:background="#000000"
        android_weilgu:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:background="#ff0000"
            android:layout_width="120dp"
            android:layout_height="50dp"/>
        <TextView
            android:background="#00ff00"
            android:layout_width="60dp"
            android:layout_height="40dp"/>
        <TextView
            android:background="#0000ff"
            android:layout_width="150dp"
            android:layout_height="70dp"/>
    </com.myview.view.LinearLayoutView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.myview.view.RoundView
            android:id="@+id/roundProgressBar2"
            android:layout_width="160dip"
            android:layout_height="160dip"
            android:layout_alignLeft="@+id/roundProgressBar1"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="78dp"

            android_weilgu:roundColor="#D1D1D1"
            android_weilgu:roundProgressColor="@android:color/black"
            android_weilgu:textColor="#9A32CD"
            android_weilgu:roundWidth="10dip"
            android_weilgu:textSize="24sp"
            />

        <com.myview.view.RoundView
            android:id="@+id/roundProgressBar4"
            android_weilgu:style="FILL"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/roundProgressBar1"
            android:layout_marginRight="32dp"
            android_weilgu:roundWidth="1dip"
            android_weilgu:roundProgressColor="#C2C2C2" />

        <com.myview.view.RoundView
            android:id="@+id/roundProgressBar5"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_below="@+id/roundProgressBar1"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@+id/roundProgressBar1" />


        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Button" />

        <com.myview.view.RoundView
            android:id="@+id/roundProgressBar1"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/button1"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="40dp" />

    </RelativeLayout>




</LinearLayout>
